---
import { Image } from 'astro:assets';
import CtaBackground from '../assets/gallery/entertainment/5.jpg';
---

<section class="hero-cta">
    <div class="background">
        <div class="overlay"></div>
        <Image 
            src={CtaBackground} 
            alt="Background" 
            width={1200} 
            height={400} 
            class="bg-image"
        />
    </div>
    
    <div class="content" id="contact-cta">
        <h1 class="title">Get in Touch With Us</h1>
        
        <form class="contact-form" id="whatsappForm">
            <div class="form-row">
                <input type="text" name="name" id="name" placeholder="Your Name" required class="form-input">
            </div>
            <div class="form-row">
                <input type="tel" name="phone" id="phone" placeholder="Phone Number" required class="form-input">
            </div>
            <div class="form-row">
                <input type="email" name="email" id="email" placeholder="Email Address" required class="form-input">
            </div>
            <div class="form-row">
                <textarea name="message" id="message" placeholder="Your Message" rows="4" class="form-input"></textarea>
            </div>
            <button type="submit" class="submit-btn">Submit</button>
        </form>
    </div>
</section>

<style>
    .hero-cta {
        position: relative;
        width: 100%;
        padding: 60px 20px;
        background: #000;
        overflow: hidden;
    }

    .background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        z-index: 1;
    }

    .bg-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.3;
    }

    .content {
        position: relative;
        z-index: 2;
        max-width: 600px;
        margin: 0 auto;
    }

    .title {
        font-size: 36px;
        text-align: center;
        color: #e7c980;
        margin-bottom: 30px;
        font-weight: 700;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
        background: rgba(0, 0, 0, 0.8);
        padding: 30px;
        border-radius: 8px;
        border: 1px solid rgba(231, 201, 128, 0.3);
    }

    .form-input {
        width: 100%;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(231, 201, 128, 0.3);
        padding: 12px 15px;
        border-radius: 4px;
        color: white;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .form-input:focus {
        border-color: #e7c980;
        outline: none;
        box-shadow: 0 0 10px rgba(231, 201, 128, 0.2);
    }

    .form-input::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    textarea.form-input {
        resize: vertical;
        min-height: 100px;
    }

    .submit-btn {
        background: #e7c980;
        color: black;
        border: none;
        padding: 15px 30px;
        font-size: 18px;
        font-weight: 600;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .submit-btn:hover {
        background: #d4b670;
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .title {
            font-size: 28px;
        }

        .contact-form {
            padding: 20px;
        }
    }
</style>

<script>
    const form = document.getElementById('whatsappForm');
    const whatsappNumber = "+919960007937";

    form?.addEventListener('submit', (e) => {
        e.preventDefault();
        
        const name = (document.getElementById('name') as HTMLInputElement).value;
        const phone = (document.getElementById('phone') as HTMLInputElement).value;
        const email = (document.getElementById('email') as HTMLInputElement).value;
        const message = (document.getElementById('message') as HTMLTextAreaElement).value;

        // Create WhatsApp message
        const whatsappMessage = `Hello! I would like to get in touch.\n\nName: ${name}\nPhone: ${phone}\nEmail: ${email}\nMessage: ${message}`;
        
        // Encode the message for URL
        const encodedMessage = encodeURIComponent(whatsappMessage);
        
        // Redirect to WhatsApp
        window.open(`https://wa.me/${whatsappNumber}?text=${encodedMessage}`, '_blank');
    });
</script>